<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ToolbarTheme" parent="AppBaseTheme">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/colorAccent</item>
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="ColoredButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!--用于图片多选的界面-->
    <style name="MIP_theme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DocumentCaptionText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFEFEFEF</item>
        <item name="android:background">#aa000000</item>
    </style>

    <style name="DocumentDateText">
        <item name="android:textColor">#FFEFEFEF</item>
        <item name="android:background">#aa000000</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="TOCPageNumber">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TOCCaptionText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TOCDateText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OptionsText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FairySpeechbubble">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SelectorButton">
        <item name="android:width">115dip</item>
        <item name="android:height">40dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="blur_warning_bullet_point">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:drawableLeft">@drawable/ic_bullet_point_2</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

</resources>