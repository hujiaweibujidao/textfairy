<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dropshadow"
    android:paddingBottom="@dimen/dropshadow_padding_bottom"
    android:paddingLeft="@dimen/dropshadow_padding_left"
    android:paddingRight="@dimen/dropshadow_padding_right"
    android:paddingTop="@dimen/dropshadow_padding_top">

    <TextView
        android:id="@+id/title"
        style="@style/DocumentCaptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:padding="4dp"
        tools:text="Document Title"/>

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty"/>

    <TextView
        android:id="@+id/date"
        style="@style/DocumentDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_toLeftOf="@+id/checkbox"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="4dp"
        tools:text="Document Date"/>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/checkbox"
        style="@style/DocumentDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/date"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="4dp"
        tools:text="@string/item_uncheck"/>

</RelativeLayout>
